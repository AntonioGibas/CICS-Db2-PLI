 /* Kreiranje tablice KNJIGE */
CREATE TABLE KNJIGE (
    ID INTEGER NOT NULL GENERATED BY DEFAULT AS IDENTITY
        (START WITH 1, INCREMENT BY 1 NO MAXVALUE ORDER),/* ID - ID knjige */
    NAZIV VARCHAR(60) NOT NULL, /* Naziv - Naziv knjige */
    AUTOR VARCHAR(60), /* Autor - Naziv autora knjige */
    KATGRJ VARCHAR(20), /* Katgrj - Kategorija knjige */
    GODIZD INTEGER, /* Godizd - Godina izdanja */
    BRKNJ INTEGER, /* Brknj - Broj knjige */
    PRIMARY KEY (ID)
);