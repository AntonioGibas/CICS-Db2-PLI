/* Kreiranje tablice AUTORI s prefiksom TAB ispred svakog stupca */
CREATE TABLE AUTORI (
    TABID INTEGER NOT NULL GENERATED BY DEFAULT AS IDENTITY 
        (START WITH 1, INCREMENT BY 1 NO MAXVALUE ORDER), /* TABID - ID autora */
    TABPREZ VARCHAR(60) NOT NULL, /* TABPREZ - Prezime autora */
    TABIME VARCHAR(60), /* TABIME - Ime autora */
    
    /* Definiranje primarnog kljuèa s imenom */
    CONSTRAINT PK_AUTORI PRIMARY KEY (TABID)
);

/* Kreiranje jedinstvenog indeksa za kolonu TABID */
CREATE UNIQUE INDEX IDX_UNIQUE_AUTORI_ID
ON AUTORI (TABID);

/* Kreiranje view-a za tablicu AUTORI s originalnim nazivima kolona */
CREATE VIEW VIEW_AUTORI AS
    SELECT 
        TABID AS ID, /* ID autora */
        TABPREZ AS PREZ, /* Prezime autora */
        TABIME AS IME /* Ime autora */
 FROM AUTORI;
 
/* Dodavanje komentara na stupce */
COMMENT ON COLUMN AUTORI.TABID 
    IS 'TABID - ID autora';
    
COMMENT ON COLUMN AUTORI.TABPREZ 
    IS 'TABPREZ - Prezime autora';

COMMENT ON COLUMN AUTORI.TABIME 
    IS 'TABIME - Ime autora';
