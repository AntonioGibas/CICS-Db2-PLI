/* Kreiranje tablice CLANOVI s primarnim kljuèem */
CREATE TABLE CLANOVI (
    TABID INTEGER NOT NULL GENERATED BY DEFAULT AS IDENTITY 
        (START WITH 1 INCREMENT BY 1 NO MAXVALUE ORDER), /* TABID - ID èlana */
    TABPREZ VARCHAR(60) NOT NULL, /* TABPREZ - Prezime èlana */
    TABIME VARCHAR(60), /* TABIME - Ime èlana */
    TABDATOD DATE, /* TABDATOD - Datum uèlanjenja */
    TABSTATUS INTEGER, /* TABSTATUS - Status èlana */
    
    /* Definiranje primarnog kljuèa s imenom */
    CONSTRAINT PK_CLANOVI PRIMARY KEY (TABID)
);

/* Kreiranje jedinstvenog indeksa za primarni kljuè */
CREATE UNIQUE INDEX IDX_UNIQUE_CLANOVI_ID ON CLANOVI (TABID);

/* Kreiranje view-a za tablicu CLANOVI */
CREATE VIEW VIEW_CLANOVI AS
    SELECT 
        TABID AS ID, /* ID èlana */
        TABPREZ AS PREZ, /* Prezime èlana */
        TABIME AS IME, /* Ime èlana */
        TABDATOD AS DATOD, /* Datum uèlanjenja */
        TABSTATUS AS STATUS /* Status èlana */
    FROM CLANOVI;

/* Dodavanje komentara na stupce */
COMMENT ON COLUMN CLANOVI.TABID IS 'TABID - ID èlana';
COMMENT ON COLUMN CLANOVI.TABPREZ IS 'TABPREZ - Prezime èlana';
COMMENT ON COLUMN CLANOVI.TABIME IS 'TABIME - Ime èlana';
COMMENT ON COLUMN CLANOVI.TABDATOD IS 'TABDATOD - Datum uèlanjenja';
COMMENT ON COLUMN CLANOVI.TABSTATUS IS 'TABSTATUS - Status èlana';
